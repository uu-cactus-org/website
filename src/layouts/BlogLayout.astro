---
import Layout from './Layout.astro';
import BlogHeader from '@components/features/header/BlogHeader.astro';
import ReturnButton from '@components/ReturnButton.astro';

import type { MarkdownHeading } from 'astro';
import type { BlogSchema } from '@config';

import '../styles/blog-link-card.css';
import noimage from '@assets/noimage.png';
import githubLogo from '@assets/logos/github_logo.svg';

interface Props {
    frontmatter: BlogSchema;
    headings: MarkdownHeading[];
}

const { frontmatter } = Astro.props;

const minHeadingDepth = Math.min(...Astro.props.headings.map((heading) => heading.depth));
const headings = Astro.props.headings
    .filter((heading) => heading.depth <= 3)
    .map((heading) => ({
        ...heading,
        relativeDepth: heading.depth - minHeadingDepth, // ネストの深さを調節
    }));
---

<Layout title={`${frontmatter.title} | 情報研究会 CACTUS`}>
    <Fragment slot="head">
        <meta property="og:type" content="article" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta property="og:title" content={frontmatter.title} />
        <meta property="og:image" content={frontmatter.coverImage?.src ?? noimage.src} />
    </Fragment>
    
    <article>
        <div class="body" id="top">
            <div class="header">
                <BlogHeader frontmatter={frontmatter} />
            </div>
            
            <div class="content">
                <slot />
            </div>
              <div class="footer">
                <div class="footer-buttons">
                    <ReturnButton href="/blog">記事一覧へ</ReturnButton>
                    <a href={`https://github.com/uu-cactus-org/website/edit/main/src/content/blog/${Astro.url.pathname.split('/').filter(Boolean).pop()}/index.md`} target="_blank" class="github-edit-button">
                        <img src={githubLogo.src} alt="GitHub Logo" />
                        GitHubで編集
                    </a>
                </div>
            </div>
        </div>

        <div class="sidebar">
            <a href="#top">
                <span>目次</span>
            </a>
            <ul>
                {headings.map((heading) => (
                    <li class={`m${heading.relativeDepth}`}>
                        <a href={`#${heading.slug}`}>{heading.text}</a>
                    </li>
                ))}
            </ul>
        </div>
    </article>
</Layout>

<style>
    body {
        background-color: #f6f6f6;
    }
    
    article {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        gap: 2rem;
        justify-content: center;
        align-items: flex-start;
    }
    
    .body {
        flex-grow: 1;
        max-width: 950px;
        background-color: white;
        padding: 32px 56px;
        border-radius: 10px;
    }
    
    .sidebar {
        flex: 0 0 250px;
        position: sticky;
        top: 2rem;
        height: fit-content;
        padding: 32px 16px;
    }

    .sidebar span {
        font-size: 1.3rem;
        font-weight: bold;
    }

    .sidebar h2 {
        font-size: 1.2rem;
        margin: 0;
        color: rgb(68, 68, 68);
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar li {
        margin-bottom: 4px;
    }
    
    .sidebar a {
        display: block;
        width: 100%;
        color: rgb(95, 95, 95);
        text-decoration: none;
        padding: 3px 6px;
        border-radius: 4px;
        font-size: 0.9rem;
    }

    .sidebar a:hover {
        background-color: #f0f0f0;
    }

    .header {
        margin-bottom: 1rem;
    }

    .footer {
        margin-top: 3rem;
        margin-bottom: 1rem;
    }

    .footer-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }
    
    .github-edit-button {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.8rem;
        background-color: transparent;
        border: 1px solid #e1e4e8;
        border-radius: 4px;
        color: #6e7781;
        font-size: 0.85rem;
        text-decoration: none;
        transition: all 0.2s;
    }

    .github-edit-button:hover {
        background-color: #f0f0f0;
        color: #24292e;
    }

    .github-edit-button img {
        width: 15px;
        height: 15px;
        opacity: 0.8;
    }

    /* markdownの中身のスタイル */

    .content :global(p) {
        line-height: 1.8;
    }
    
    .content :global(h1) {
        margin: .8em 0;
        font-size: 1.65em;
        padding-bottom: .3em;
        border-bottom: 1px solid #d3d3d3;
    }

    .content :global(img:not(.rlc-favicon):not(.rlc-image)) {
        max-width: 100%;
        height: auto;
        max-height: 600px;
        object-fit: contain;
        display: block;
        margin: 0 auto;
    }

    .content :global(figcaption) {
        color: #666;
        text-align: center;
        font-size: 0.8em;
        margin-top: -0.5rem;
    }

    .content :global(a) {
        color: #0070f3;
        text-decoration: none;
    }

    .content :global(a:not(.rlc-container):hover) {
        text-decoration: underline;
    }

    /* inline code */
    .content :global(code:not(pre code)) {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
        font-size: 0.9em;
        background-color: #f1f1f1;
        padding: 0.3em 0.5em;
        margin: 0 0.2em;
        border-radius: 4px;
    }

    .content :global(blockquote) {
        padding: 1.3rem;
        margin: 0;
        margin-top: 0.6rem;
        border-radius: 5px;
        border-left: 4px solid #2fa131;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.13);
        background-color: #fbfbfb;
        font-size: 1.05em;
    }

    .content :global(blockquote:not(blockquote blockquote)) {
        margin-right: 4px;
    }

    .content :global(blockquote p) {
        margin: 0;
    }

    .content :global(table) {
        width: 100%;
        border-collapse: collapse;
        margin: 1em 0;
        border: 1px solid #d5d5d5;
    }

    .content :global(table th),
    .content :global(table td) {
        padding: 0.5em 1em;
        text-align: left;
        border-bottom: 1px solid #e2e2e2;
        border-right: 1px solid #d5d5d5;
    }

    .content :global(table th) {
        background-color: #e8e8e8;
        border-bottom: 2px solid #d5d5d5;
    }

    .content :global(table td:last-child),
    .content :global(table th:last-child) {
        border-right: none;
    }

    .content :global(table tr:nth-child(even)) {
        background-color: #f6f6f6;
    }

    .content :global(details) {
        margin: 1em 0;
        padding: 0;
        background-color: #f9f9f9;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .content :global(details summary) {
        cursor: pointer;
        font-weight: 500;
        padding: 0.8em 1em;
        margin: 0;
        background-color: #f0f0f0;
        border-bottom: 1px solid #e0e0e0;
        transition: background-color 0.2s;
    }

    .content :global(details summary:hover) {
        background-color: #e8e8e8;
    }

    .content :global(details[open] summary) {
        border-bottom: 1px solid #d0d0d0;
    }

    .content :global(details > *:not(summary)) {
        padding: 0 1em 1em 1em;
    }

    .m1 { margin-left: 1em; }
    .m2 { margin-left: 2em; }

    @media (max-width: 1200px) {
        .body {
            padding: 24px;
            box-sizing: border-box;
            max-width: 100%;
            overflow-x: hidden;
        }
    }

    @media (max-width: 950px) {
        body {
            background-color: inherit;
        }
        
        article {
            flex-direction: column;
            max-width: 100%;
        }

        .body {
            width: 100%;
            padding: 0;
        }

        .sidebar {
            display: none;
        }
    }
    
    @media (max-width: 768px) {
        .content :global(blockquote) {
            padding: 0.8rem;
        }

        .footer-buttons {
            justify-content: space-between;
            align-items: center;
        }

        .github-edit-button {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
        }
    }
</style>
