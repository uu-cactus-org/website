---
import Layout from "@layouts/Layout.astro";
import Twitter from "@components/Twitter.astro";
import BasicButton from "@components/BasicButton.astro";
import BlogList from "@components/features/blog/BlogList.astro";
import { Image } from "astro:assets";

import ogpImage from "@assets/noimage.png";
import sinkanImage from "@assets/images/sinkan2025.png"
---

<Layout title="情報研究会 CACTUS">
	<Fragment slot="head">
    <meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="og:title" content="TOP | 情報研究会 CACTUS" />
		<meta property="og:description" content="情報研究会 CACTUSのwebサイトです。" />
		<meta property="og:image" content={ogpImage.src} />
  </Fragment>
	
	<div class="container">
		<div class="body">
			<section class="intro">
				<h1>🌵 CACTUSの部室 🌵</h1>
				<p>情報研究会 CACTUSへようこそ！</p>

				<BasicButton buttonText="もっと知る" link="/about" />
			</section>

			
			<!-- 一時的なお知らせ(新歓等)用 -->
			
			<section class="news">
				<h2>📢 2025年度 新歓のお知らせ</h2>
				<p>
					詳しい日程は
					<a href="https://uu-circles.com/circle/page.php?c=cactus">uu-circlesのページ</a>
					をご覧ください！
				</p>
				<Image src={sinkanImage} alt="新歓2025" class="sinkan-image" />
			</section>

			
			<section class="blogs">
				<h2>📰 最近の記事</h2>
				<div class="blog-container">
					<BlogList filter={{ sortBy: 'date', limit: 2 }} size="small" />
				</div>
			</section>
		</div>

		<aside class="sidebar">
				<Twitter url="https://twitter.com/uu_cactus" />
		</aside>
	</div>
</Layout>

<style>
	.container {
		width: 100%;
		display: flex;
		justify-content: center;
	}

	.body {
		margin-right: 1.2rem;
		flex: 1;
		min-width: 600px;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.intro {
		text-align: center;
	}

	.intro h1 {
		font-size: 2rem;
	}

	.blog-container {
		display: flex;
		justify-content: center;
		margin: 1rem;
	}

	.sidebar {
		display: flex;
		justify-content: center;
		border-left: 1px solid #ccc;
		padding: 3rem 2rem;
		width: 400px;
		text-align: center;
	}

	@media (max-width: 1200px) {
		.sidebar {
			width: 250px;
			padding: 1rem;
		}

		.blog-container {
			padding: 0;
		}
	}

	@media (max-width: 1000px) {
		.body {
			min-width: 0;
			margin: 0;
		}
		
		.container {
			flex-direction: column;
			justify-content: center;
		}

		.sidebar {
			width: 100%;
			padding: 0;
			margin: auto 0;
			border-left: none;
		}
	}

	.sinkan-image {
		width: 100%;
		height: auto;
		max-height: 500px;
		object-fit: contain;
		margin: 0 auto;
	}
</style>
