---
import Layout from "@layouts/Layout.astro";
import Twitter from "@components/Twitter.astro";
import BasicButton from "@components/BasicButton.astro";
import BlogList from "@components/features/blog/BlogList.astro";

import ogpImage from "@assets/noimage.png";
---

<Layout title="情報研究会 CACTUS">
	<Fragment slot="head">
    <meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="og:title" content="TOP | 情報研究会 CACTUS" />
		<meta property="og:description" content="情報研究会 CACTUSのwebサイトです。" />
		<meta property="og:image" content={ogpImage.src} />
  </Fragment>
	
	<div class="container">
		<div class="body">
			<section class="intro">
				<h1>🌵 CACTUSの部室 🌵</h1>
				<p>情報研究会 CACTUSへようこそ！</p>

				<BasicButton buttonText="もっと知る" link="/about" />
			</section>

			
			<!-- 一時的なお知らせ(新歓等)用 -->
			<!-- <section class="news">
				<h2>📢 2025年度 新歓のお知らせ</h2>
				<p>
					詳しい日程は
					<a href="https://uu-circles.com/circle/page.php?c=cactus">uu-circlesのページ</a>
					をご覧ください！
				</p>
				<Image src={sinkanImage} alt="新歓2025" class="sinkan-image" />
			</section> -->

			
			<section class="blogs">
				<h2>📰 最近の記事</h2>
				<div class="blog-container">
					<BlogList filter={{ sortBy: 'date', limit: 2 }} size="small" />
				</div>
			</section>
		</div>

		<aside class="sidebar">
			<Twitter url="https://twitter.com/uu_cactus" />
		</aside>
	</div>
</Layout>

<style>
	.container {
		display: flex;
		justify-content: center;
		gap: 2rem;
		max-width: 100%;
		margin: 0 auto;
	}

	.body {
		flex: 1;
		min-width: 0; /* flexboxのオーバーフローを防ぐ */
		max-width: 1000px;
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.intro {
		text-align: center;
		padding: 2rem 0;
		background: linear-gradient(135deg, rgba(70, 189, 76, 0.1) 0%, rgba(70, 189, 76, 0.05) 100%);
		border-radius: 12px;
		border: 1px solid var(--color-border-light);
	}

	.intro h1 {
		font-size: 2.5rem;
		margin: 0 0 1rem 0;
		color: var(--color-text-primary);
		font-weight: 700;
	}

	.intro p {
		font-size: 1.2rem;
		color: var(--color-text-secondary);
		margin: 0 0 2rem 0;
	}

	.blogs {
		background-color: var(--color-background-white);
		border-radius: 12px;
		padding: 2rem;
		border: 1px solid var(--color-border-light);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}

	.blogs h2 {
		font-size: 1.6rem;
		margin: 0 0 1.6rem 0;
	}

	.blog-container {
		display: flex;
		justify-content: center;
	}

	.sidebar {
		display: flex;
		justify-content: center;
		align-items: flex-start;
		border-left: 2px solid var(--color-border-light);
		padding: 2rem;
		width: 320px;
		min-width: 320px;
		/* background-color: rgba(245, 245, 245, 0.3); */
		margin-left: 1rem;
	}

	@media (max-width: 1200px) {
		.container {
			gap: 1.5rem;
		}

		.sidebar {
			width: 280px;
			min-width: 280px;
			padding: 1.5rem;
		}

		.body {
			gap: 2rem;
		}
	}

	@media (max-width: 1000px) {
		.container {
			flex-direction: column;
			gap: 2rem;
		}

		.body {
			max-width: 100%;
		}
		
		.sidebar {
			width: 100%;
			min-width: auto;
			border-left: none;
			border-top: 2px solid var(--color-border-light);
			margin-left: 0;
			padding: 2rem;
		}
	}

	@media (max-width: 768px) {
		.intro {
			padding: 1.5rem;
		}

		.intro h1 {
			font-size: 1.7rem;
		}

		.intro p {
			font-size: 1.1rem;
		}

		.blogs {
			padding: 1.5rem;
		}

		.blogs h2 {
			font-size: 1.4rem;
		}

		.sidebar {
			padding: 1.5rem;
		}
	}

	.sinkan-image {
		width: 100%;
		height: auto;
		max-height: 500px;
		object-fit: contain;
		margin: 0 auto;
		border-radius: 8px;
	}
</style>
