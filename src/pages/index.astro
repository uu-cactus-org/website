---
import Layout from "@layouts/Layout.astro";
import Twitter from "@components/Twitter.astro";
import BasicButton from "@components/BasicButton.astro";
import BlogList from "@components/features/blog/BlogList.astro";
---

<Layout title="情報研究会 CACTUS">
	<Fragment slot="head">
    <meta property="og:type" content="website" />
  </Fragment>
	
	<div class="container">
		<div class="body">
			<section class="intro">
				<h1>CACTUS Demo site</h1>
				<p>情報研究会 CACTUSへようこそ！</p>
				<p>このサイトは、CACTUS公式サイトのデモバージョンです。</p>
				<BasicButton buttonText="もっと知る" link="/about" />
			</section>

			
			<!-- 一時的なお知らせ(新歓等)用 -->
			<!--
			<section class="news">
				<h2>お知らせ</h2>
			</section>
			-->
			
			<section class="blogs">
				<h2>最近の記事</h2>
				<div class="blog-container">
					<BlogList filter={{ sortBy: 'date', limit: 2 }} size="small" />
				</div>
			</section>
		</div>

		<aside class="sidebar">
				<Twitter url="https://twitter.com/uu_cactus" />
		</aside>
	</div>
</Layout>

<style>
	.container {
		width: 100%;
		display: flex;
		justify-content: center;
	}

	.body {
		margin: 2rem;
		flex: 1;
		min-width: 600px;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.intro {
		text-align: center;
	}

	.blog-container {
		display: flex;
		justify-content: center;
		padding: 1rem;
	}

	.sidebar {
		display: flex;
		justify-content: center;
		border-left: 1px solid #ccc;
		padding: 3rem 2rem;
		width: 400px;
		text-align: center;
	}

	@media (max-width: 1200px) {
		.sidebar {
			width: 250px;
			padding: 1rem;
		}

		.blog-container {
			padding: 0;
		}
	}

	@media (max-width: 1000px) {
		.body {
			min-width: 0;
			margin: 1rem;
		}
		
		.container {
			flex-direction: column;
			justify-content: center;
		}

		.sidebar {
			width: 100%;
			padding: 0;
			margin: auto 0;
			border-left: none;
		}
	}
</style>
