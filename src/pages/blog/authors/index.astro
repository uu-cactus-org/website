---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { getProfileImage } from '@utils';
import IconButton from '@components/IconButton.astro';
import leftArrow from '@assets/icons/caret-left-fill.svg';

//TODO - ページ分けが必要??
const authors = await getCollection('authors');
---

<Layout title="投稿メンバー | 情報研究会 CACTUS">
  <Fragment slot="head">
    <meta property="og:type" content="profile" />
    <meta name="twitter:card" content="summary" />
		<meta property="og:title" content="投稿メンバー | 情報研究会 CACTUS" />
  </Fragment>

  <div class="body">
    <h1>投稿メンバー</h1>
    <div class="author-container">
      {
        authors.map((author) => (
          <a href={`/blog/authors/${author.id}`} class="author-card">
            <div class="author-image">
              <img
                src={getProfileImage(author.data.profileImage)}
                alt="profile icon"
                width="50"
                height="50"
              />
            </div>
            <div>
              <span class="author-name">{author.data.name}</span><br />
              <span class="author-bio">{author.data.bio}</span>
            </div>
          </a>
        ))
      }
    </div>

    <div class="footer">
      <IconButton href='/blog' icon={leftArrow} alt="Back">記事一覧に戻る</IconButton>
    </div>
  </div>
</Layout>

<style>
  .body {
    margin: 0 auto;
    max-width: 900px;
    padding: 2em;
    box-sizing: border-box;
  }

  .footer {
    margin-top: 4em;
  }

  @media screen and (max-width: 768px) {
    .body {
      padding: 0;
    }
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  .author-container {
    display: flex;
    flex-direction: column; 
    gap: 0.6rem;
  }

  .author-card {
    display: flex;
    align-items: center; 
    padding: 0.8rem;
    border: 1.5px solid #c1c1c1;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .author-card:hover {
    background-color: #f0f0f0;
  }

  .author-image {
    display: flex;
    align-items: center;
    margin-right: 1rem;
  }

  .author-image img {
    border-radius: 50%;
  }

  .author-name {
    font-size: 1.2rem;
    font-weight: bold;
  }

  .author-bio {
    font-size: 0.9rem;
    color: #5f5f5f;
  }
</style>
