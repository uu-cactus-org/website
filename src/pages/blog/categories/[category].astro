---
import Layout from "@layouts/Layout.astro";
import { sortedblogEntriesList } from "@utils";
import BlogCard from "@components/features/blog/BlogCard.astro";
import IconButton from "@components/IconButton.astro";
import leftArrow from '@assets/icons/caret-left-fill.svg';

import type { GetStaticPathsResult } from "astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  blog: CollectionEntry<"blog">[];
  originalCategory: string;
}

export async function getStaticPaths() {
  const paths: GetStaticPathsResult = [];

  const uniqueCategories = new Set<string>(
    sortedblogEntriesList.map((blog) => blog.data.category),
  );

  for (const category of uniqueCategories) {
    const filteredBlog = sortedblogEntriesList.filter(
      (blog) => blog.data.category === category,
    );

    const encodedCategory = encodeURIComponent(category);
    paths.push({
      params: { category: encodedCategory },
      props: { blog: filteredBlog, originalCategory: category },
    });

    // エンコードされていない場合のpathも生成
    if (category !== encodedCategory) {
      paths.push({
        params: { category },
        props: { blog: filteredBlog, originalCategory: category },
      });
    }
  }

  return paths;
}

const { category } = Astro.params;
const { blog, originalCategory } = Astro.props;
---

<Layout title={`カテゴリ: ${originalCategory}の記事 | 情報研究会 CACTUS`}>
  <Fragment slot="head">
    <meta property="og:type" content="article" />
  </Fragment>

  <div class="body">
    <h1>Blog</h1>
    <p>カテゴリ: {originalCategory} の記事一覧</p>
    <div class="container">
      {
        blog.map((blogEntry) => (
          <BlogCard slug={blogEntry.slug} blog={blogEntry.data} />
        ))
      }
    </div>

    <div class="footer">
      <IconButton href="/blog" icon={leftArrow} alt="Back">記事一覧へ</IconButton>
    </div>
  </div>
</Layout>

<style>
  .body {
    margin: 0 auto;
    max-width: 1100px;
    padding: 0 1rem;
  }

  .body h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--color-text-primary);
    font-weight: 700;
    text-align: center;
  }

  .body p {
    font-size: 1.2rem;
    margin: 0 0 2rem 0;
    color: var(--color-text-secondary);
    font-weight: 500;
    text-align: center;
  }

  svg {
    width: 1em;
    height: 1em;
    vertical-align: -0.15em;
    fill: currentColor;
    overflow: hidden;
  }

  .container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .footer {
    margin-top: 2rem;
    margin-bottom: 1rem;
    text-align: left;
  }

  @media (max-width: 768px) {
    .body {
      padding: 0 0.5rem;
    }

    .body h1 {
      font-size: 2rem;
    }

    .container {
      gap: 1rem;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  @media (max-width: 480px) {
    .container {
      grid-template-columns: 1fr;
    }
  }
</style>
