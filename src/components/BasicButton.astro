---
import { Image } from 'astro:assets';
import arrowRight from '@assets/icons/arrow-right-solid.svg';

interface Props {
    buttonText: string;
    link: string;
}

const { buttonText, link } = Astro.props;
---

<div class="button">
    <a href={link}>
        <div class="text">
            {buttonText}
        </div>
        <div class="img-container">
            <Image src={arrowRight} alt="right arrow" class="img" width={30} height={30} />
        </div>
    </a>
</div>

<style>
    .button {
        display: inline-block;
        position: relative;
        margin: 4px 0; /* 上下に余白を追加 */
    }

    .button a {
        background: linear-gradient(135deg, var(--color-cactus) 0%, var(--color-cactus-dark) 100%);
        padding: 0.8rem 2rem;
        border-radius: 50px;
        text-decoration: none;
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        font-weight: 600;
        font-size: 1.1rem;
        box-shadow: 0 4px 12px rgba(70, 189, 76, 0.3);
        border: none;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .button a::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, var(--color-cactus-dark) 0%, var(--color-cactus) 100%);
        border-radius: 50px;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
    }

    .button:hover a {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(70, 189, 76, 0.4);
    }

    .button:hover a::before {
        opacity: 1;
    }

    .button:active a {
        transform: translateY(0);
        box-shadow: 0 2px 8px rgba(70, 189, 76, 0.3);
    }
    
    .text {
        display: inline-block;
        text-align: center;
        font-size: 1em;
        font-weight: inherit;
    }

    .img-container {
        display: inline-flex;
        align-items: center;
        transition: transform 0.3s ease;
    }

    .button:hover .img-container {
        transform: translateX(4px);
    }

    .img {
        height: 1.2em;
        width: auto;
        filter: brightness(0) invert(1); /* 白色にする */
    }

    @media (max-width: 768px) {
        .button a {
            padding: 0.7rem 1.5rem;
            font-size: 1rem;
            gap: 0.6rem;
        }

        .img {
            height: 1em;
        }
    }
</style>
