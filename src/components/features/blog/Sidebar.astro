---
import type { MarkdownHeading } from "astro";

interface Props {
  headings: MarkdownHeading[];
}

const minHeadingDepth = Math.min(
  ...Astro.props.headings.map((heading) => heading.depth),
);
const headings = Astro.props.headings
  .filter((heading) => heading.depth <= 3)
  .map((heading) => ({
    ...heading,
    relativeDepth: heading.depth - minHeadingDepth, // ネストの深さを調節
  }));
---

<div class="sidebar">
  <a href="#top">
    <span>目次</span>
  </a>
  <ul>
    {
      headings.map((heading) => (
        <li class={`m${heading.relativeDepth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .sidebar {
    flex: 0 0 280px;
    position: sticky;
    top: 2rem;
    height: fit-content;
    padding: 1.5rem;
    background-color: var(--color-background-white);
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    border: 1px solid var(--color-border-light);
  }

  .sidebar span {
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--color-text-primary);
    display: block;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-border-light);
  }

  .sidebar h2 {
    font-size: 1.2rem;
    margin: 0;
    color: var(--color-text-primary);
  }

  .sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar li {
    margin-bottom: 0.3rem;
  }

  .sidebar a {
    display: block;
    color: var(--color-text-secondary);
    text-decoration: none;
    padding: 0.5rem 0.8rem;
    border-radius: 4px;
    font-size: 0.9rem;
    line-height: 1.4;
    transition: all 0.2s ease;
    border-left: 3px solid transparent;
    margin-left: 0;
    box-sizing: border-box;
  }

  .sidebar a:hover {
    background-color: rgba(70, 189, 76, 0.08);
    color: var(--color-cactus);
    border-left-color: var(--color-cactus);
  }

  /* 目次のインデント調整 */
  .m0 a {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .m1 a {
    padding-left: 1.5rem;
    font-size: 0.85rem;
  }

  .m2 a {
    padding-left: 2.2rem;
    font-size: 0.8rem;
  }

  @media (max-width: 950px) {
    .sidebar {
      display: none;
    }
  }
</style>
