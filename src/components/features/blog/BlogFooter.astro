---
import { queryBlogs } from "@utils";
import IconButton from "@components/IconButton.astro";
import leftArrow from "@assets/icons/caret-left-fill.svg";

import githubLogo from "@assets/logos/github_logo.svg";

interface Props {
  blogId?: string;
}
const { blogId } = Astro.props;

const blogs = await queryBlogs({ sortBy: "date" });
const currentIndex = blogs.findIndex((blog) => blog.id === blogId);
const nextBlog = blogs[currentIndex - 1];
const prevBlog = blogs[currentIndex + 1];
---

<footer>
  <div class="navigation">
    {
      prevBlog && (
        <a href={`/blog/${prevBlog.slug}`} class="nav-item prev">
          <span class="nav-label">前の記事</span>
          <span class="nav-link">
            {prevBlog.data.title}
          </span>
        </a>
      )
    }
    {
      nextBlog && (
        <a href={`/blog/${nextBlog.slug}`} class="nav-item next">
          <span class="nav-label">次の記事</span>
          <span class="nav-link">
            {nextBlog.data.title}
          </span>
        </a>
      )
    }
  </div>
  <div class="footer-buttons">
    <IconButton href="/blog" icon={leftArrow} alt="Back">記事一覧へ</IconButton>
    {blogId && <IconButton 
      href={`https://github.com/uu-cactus-org/website/edit/main/src/content/blog/${blogId}`}
      icon={githubLogo}
      alt="GitHub Logo"
      target="_blank"
    >
      GitHubで編集
    </IconButton>}
  </div>
</footer>

<style>
  footer {
    margin-top: 3rem;
    margin-bottom: 1rem;
  }

  .navigation {
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;
    margin-top: 3rem;
    margin-bottom: 3rem;
    padding: 2rem 0;
    border-top: 2px solid var(--color-border-light);
    border-bottom: 2px solid var(--color-border-light);
  }

  .nav-item {
    flex: 1;
    max-width: 45%;
    padding: 1.2rem;
    background-color: var(--color-background-white);
    border-radius: 12px;
    border: 1px solid var(--color-border-light);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    text-decoration: none;
    display: block;
  }

  .nav-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--color-cactus);
  }

  .nav-item.next {
    text-align: right;
  }

  .nav-label {
    display: block;
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
  }

  .nav-link {
    display: block;
    color: var(--color-cactus);
    text-decoration: none;
    font-weight: 600;
    line-height: 1.4;
    transition: color 0.3s ease;
    font-size: 1rem;
  }

  .nav-link:hover {
    color: var(--color-cactus-dark);
  }

  .footer-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .navigation {
      flex-direction: column;
      gap: 1rem;
      padding: 1.5rem 0;
    }

    .nav-item {
      max-width: 100%;
      padding: 1.2rem;
    }

    .nav-item.next {
      text-align: left;
    }

    .footer-buttons {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .nav-link {
      font-size: 1rem;
    }

    .nav-label {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .navigation {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }

    .nav-item {
      padding: 1rem;
    }

    .nav-link {
      font-size: 0.95rem;
    }
  }
</style>
