---
import { Image } from 'astro:assets';
import type { BlogSchema } from '@config';
import { formatDate } from '@utils';

import noimage from '@assets/noimage.png';

interface Props {
    slug: string;
    blog: BlogSchema;
}

const { blog, slug } = Astro.props;

const coverImage = blog.coverImage ?? noimage;
const date = blog.updated ?? blog.pubdate;
---

<div class="card">
    <a href={`/blog/${slug}`} aria-label={blog.title} class="card-link">
        <div class="cover-image">
            <Image src={coverImage} alt="cover image" />
        </div>
        <div class="card-body">
            <div class="title">
                <h2>{blog.title}</h2>
            </div>
            <div class="meta">
                <div class="tags">
                    {blog.tags.map((tag) => (
                        <span>#{tag}</span>
                    ))}
                </div>
                <div class="date">
                    <time datetime={date.toISOString()}>
                        {formatDate(date)}
                    </time>
                </div>
            </div>
        </div>
    </a>
</div>

<style>
    .card {
        display: flex;
        flex-direction: column;
        border: 1px solid var(--color-border-light);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border-radius: 12px;
        overflow: hidden;
        flex-grow: 1;
        background-color: var(--color-background-white);
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    }

    a {
        text-decoration: none;
        color: var(--color-text-primary);
    }

    .card-link {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
    }

    .cover-image {
        border-bottom: 1px solid var(--color-border-light);
        aspect-ratio: 16 / 9;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .cover-image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        display: block;
        transition: transform 0.3s ease;
    }

    .card:hover .cover-image img {
        transform: scale(1.05);
    }
    
    .card-body {
        display: flex;
        flex-direction: column;
        padding: 1.2rem;
        flex-grow: 1;
    }

    .title h2 {
        margin: 0 0 0.8rem 0;
        font-size: 1.25em;
        font-weight: 600;
        line-height: 1.4;
        color: var(--color-text-primary);
    }

    .meta {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        gap: 0.8rem;
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        font-size: 0.85em;
    }

    .tags span {
        background-color: rgba(70, 189, 76, 0.1);
        color: var(--color-cactus-dark);
        padding: 0.25rem 0.5rem;
        border-radius: 10px;
        font-weight: 500;
        border: 1px solid rgba(70, 189, 76, 0.2);
    }

    .date {
        font-size: 0.8em;
        color: var(--color-text-secondary);
        text-align: right;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .card-body {
            padding: 1rem;
        }

        .title h2 {
            font-size: 1.1em;
        }

        .tags {
            font-size: 0.8em;
        }

        .date {
            font-size: 0.75em;
        }
    }
</style>
